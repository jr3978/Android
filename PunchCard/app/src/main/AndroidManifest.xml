<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.utilisateur.punchcard">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityHistory"
            android:label="@string/title_activity_history"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="PunchCard.ActivityHistory" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityParameters"
            android:label="@string/title_activity_history"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="PunchCard.Parameters" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityHistorySetting"
            android:label="@string/title_activity_history" >
            <intent-filter>
                <action android:name="PunchCard.ActivityHistorySetting" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="sensorPortrait"
            android:name=".ActivitySetting"
            android:label="@string/activity_settings_title">
        </activity>
        <receiver
            android:icon="@drawable/ic_launcher"
            android:label="PunchCard"
            android:name="WidgetPunch" >
            <intent-filter >
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget" />
        </receiver>
        <service android:name=".UpdateService"></service>
    </application>

</manifest>
